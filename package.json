{
  "name": "tidewave",
  "version": "0.1.0",
  "description": "Tidewave JavaScript CLI for documentation extraction and MCP server",
  "keywords": [
    "typescript",
    "documentation",
    "mcp",
    "cli",
    "tidewave"
  ],
  "homepage": "https://tidewave.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/dashbit/tidewave_javascript.git"
  },
  "license": "Apache-2.0",
  "author": "Dashbit",
  "type": "module",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "bin": {
    "tidewave": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:bun": "bun test",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bun": "latest",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/ui": "^3.2.4",
    "bun-types": "latest",
    "eslint": "^9.16.0",
    "eslint-plugin-functional": "^7.1.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
